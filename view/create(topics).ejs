        <div class="content">
          <h2 class="page-title">Add Topic</h2>
          <!--uploads (Img) -->
          <form
            action="createtopics"
            method="POST"
           enctype="multipart/form-data"
          >
            <div>
              <label>Upload image</label>
              <input
                type="file"
                name="avatar"
                class="text-input"
                multiple
                required
              />
            </div>
            <div>
              <label>Upload D_image</label>
              <input
                type="file"
                name="avatar1"
                class="text-input"
                multiple
                required
              />
            </div>
            <div>
              <label>Title</label>
              <input type="text" name="title" class="text-input" required />
            </div>
            <div>
              <label>Description</label>
              <input
                type="text"
                name="description"
                class="text-input"
              />
            </div>
            <div>
              <label>D_Description</label>
              <input
                type="text"
                name="description1"
                class="text-input"
              />
            </div>
            <div>
              <label>Category</label>
              <select name="category" class="text-input" required>
                  <option value="about Mongolia">about Mongolia</option>
                  <option value="about Japan">about Japan</option>
                  <option value="about Korea">about Korea</option>
                  <option value="about Italy">about Italy</option>
                  <option value="about China">about China</option>
                  <option value="about Russia">about Russia</option>
                  <option value="about Switzerland">about Switzerland</option>
                  <option value="about Sweden">about Sweden</option>
              </select>
          </div>
            <div>
              <label>Date</label>
              <input type="date" name="date" class="date-input" required />
            </div>
            <div>
              <input type="submit" value="Upload_file" class="btn btn-big" required> 
            </input>
            </div>
          </form>
        </div>
      </div>
    </div>

